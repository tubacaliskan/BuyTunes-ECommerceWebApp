@using E_Commerce_Web_Application.Models
@model  IEnumerable<ProductModel>
@*@model  IEnumerable<MainCategory>*@

@{
    ViewBag.Title = "ProductList";
}

<div class="row mx-3 mt-5">

    <div class="col-md-3">
        <div class="row mb-3">
            @Html.Action("GetMainCategories", "Home")
        </div>

        <div class="row">
            @Html.Action("GetCategories", "Home")
        </div>
    </div>

    <div class="col-md-9">
        <div class="row">

            @if (Model.Count() == 0)
            {
                <div class="alert alert-danger" role="alert" style="width: 280%">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>                    
                    <strong> No Product Found</strong>
                </div>
            }
            else
            {
                <div class="alert alert-secondary" role="alert" style="width: 200%">
                    <i class="fa fa-check-square-o" aria-hidden="true"></i>
                    <strong> @Model.Count()</strong> Product Found
                </div>
            }

        </div>
        <div class="row">

            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="/Theme/Image/@product.ProductImage" class="card-img-top" alt="@product.ProductName">
                        <div class="card-body">
                            <h5 class="card-title"> <a href="/Home/Product/@product.Id">@product.ProductName </a></h5>
                            <p class="card-text">@product.ProductDescription</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted ProductPrice">@product.ProductPrice <i class="fa fa-try" aria-hidden="true"></i></small>
                            <a href="/Home/Product/@product.Id" class="btn btn-primary btn-sm float-right"> <i class="fa fa-chevron-right" aria-hidden="true"></i> Product Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

