@using E_Commerce_Web_Application.Entity
@model  IEnumerable<MainCategory>

@{
    var SelectedCategory = Url.RequestContext.RouteData.Values["id"];
}

<div class="list-group mx-4">
    <a href="/Home/ProductList" class="list-group-item list-group-item-action" aria-current="true" style="width: 160%">
        <i class="fa fa-chevron-right" aria-hidden="true"></i>
        All Main Categories
    </a>

    @foreach (var mainCategory in Model)
    {
        // amaç seçilen butonun arka fonunu aktif hale getirmek.
        if (SelectedCategory != null)
        {
            if (mainCategory.Id == int.Parse(SelectedCategory.ToString()))
            {
                // seçilen kategori ile route id birbine eşitse

                <a href="/Home/ProductList/@mainCategory.Id" class="list-group-item list-group-item-action active" aria-current="true" style="width: 160%">
                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                    @mainCategory.Name
                </a>
            }
            else
            {
                <a href="/Home/ProductList/@mainCategory.Id" class="list-group-item list-group-item-action" aria-current="true" style="width: 160%">
                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                    @mainCategory.Name
                </a>
            }

        }
        else
        {
            <a href="/Home/ProductList/@mainCategory.Id" class="list-group-item list-group-item-action" aria-current="true" style="width: 160%">
                <i class="fa fa-chevron-right" aria-hidden="true"></i>
                @mainCategory.Name
            </a>
        }


    }
