@using E_Commerce_Web_Application.Models;
@model  IEnumerable<UserOrderModel>
@{
    ViewBag.Title = "Index";
}



<div class="container mt-5">

    <h5 class="mt-0">Orders</h5>
    @if (Model.Count() > 0)
    {
        <div class="row mt-3 mb-5">

            <table class="table table-bordered table-striped">
                @foreach (var item in Model)
                {
                    <div class="d-flex position-relative">
                        <div>
                            <div class="row mx-2">
                                <div class="col-md-2 mx-1 btn btn-outline-success"> Order Number: @item.OrderNumber </div>
                                <div class="col-md-2 mx-1 btn btn-outline-success"> Total Price: @item.Total.ToString("c") </div>
                                <div class="col-md-2 mx-1 btn btn-outline-success">Date: @item.OrderDate.ToShortDateString() </div>
                                <div class="col-md-2 mx-1 btn btn-outline-success">Order Status: @item.OrderState </div>
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "col-md-2 mx-1 btn btn-outline-success" })
                            </div>
                        </div>
                    </div>
                }
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert" style="width: 200%">
            <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
            <strong> There are no items in your cart</strong>
        </div>
        <div class=" text-md-left">
            <div class="row m-sm-1 mt-5">
                <div class="col-md-3"> <a href="/" class="btn btn-outline-primary mx-1">Let's Continue Shopping</a> </div>
            </div>
        </div>
    }




</div>

